<div class="container">
  <%= form_with model: @account, method: :get, local: true do |f| %>
    <div class="row align-items-center">
      <div class="col ">
        <%= f.text_field :username, class: "form-control", placeholder: "アカウントID" %>
      </div>
      <div class="col-3">
        <%= f.select :sns, Account.sns.keys.to_a, { include_blank: '選択してください'}, { required: true , class: "form-control col" } %>
      </div>
      <div class="col">
        <%= f.submit '検索', class: "btn btn-outline-secondary", :name => nil %>
      </div>
    </div>
  <% end %>
</div>
